<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurant_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="416dp"
        android:layout_height="535dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:text="@string/restaurant_name" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="318dp" />

    <TextView
        android:id="@+id/operating_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/operating_hours"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="338dp" />

    <TextView
        android:id="@+id/resto_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resto_description"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/resto_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resto_menu"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="406dp" />

    <TextView
        android:id="@+id/menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_item"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="432dp" />

    <TextView
        android:id="@+id/menu_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_description"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_price"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="501dp" />

    <ImageView
        android:id="@+id/resto1_pic"
        android:layout_width="415dp"
        android:layout_height="185dp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-4dp"
        tools:srcCompat="@drawable/resto1_pic" />

    <Button
        android:id="@+id/button"
        android:layout_width="43dp"
        android:layout_height="49dp"
        android:text="<"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>